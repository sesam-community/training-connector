[
    {
        "_id": "{{@ system @}}-customer-event",
        "compaction": {
            "keep_versions": 0,
            "time_threshold_hours": 168
        },
        "namespaced_identifiers": false,
        "source": {
            "trace": true,
            "type": "http_endpoint"
        },
        "transform": [
            {
                "rules": {
                    "default": [
                        [
                            "copy",
                            "*"
                        ],
                        [
                            "add",
                            "_id",
                            [
                                "string",
                                "_S.id"
                            ]
                        ]
                    ]
                },
                "type": "dtl"
            }
        ],
        "type": "pipe"
    },
    {
        "_id": "{{@ system @}}-customer-event-processed",
        "namespaced_identifiers": false,
        "source": {
            "dataset": "{{@ system @}}-customer-event",
            "type": "dataset"
        },
        "transform": {
            "rules": {
                "default": [
                    [
                        "if",
                        [
                            "eq",
                            "_S.event",
                            "customer.delete"
                        ],
                        [
                            "add",
                            "_deleted",
                            true
                        ]
                    ],
                    [
                        "merge",
                        "_S.value"
                    ]
                ]
            },
            "type": "dtl"
        },
        "type": "pipe"
    },
    {
        "_id": "{{@ system @}}-customer-register-webhook",
        "add_namespaces": false,
        "source": {
            "entities": [
                {
                    "_id": "operation-settings-create",
                    "_updated": 0,
                    "payload": {
                        "event": "customer.create",
                        "targetUrl": "{{@ service_url @}}/receivers/{{@ system @}}-customer-event/entities"
                    }
                },
                {
                    "_id": "operation-settings-update",
                    "_updated": 1,
                    "payload": {
                        "event": "customer.update",
                        "targetUrl": "{{@ service_url @}}/receivers/{{@ system @}}-customer-event/entities"
                    }
                },
                {
                    "_id": "operation-settings-delete",
                    "_updated": 2,
                    "payload": {
                        "event": "customer.delete",
                        "targetUrl": "{{@ service_url @}}/receivers/{{@ system @}}-customer-event/entities"
                    }
                }
            ],
            "if_source_empty": "accept",
            "supports_since": true,
            "type": "embedded"
        },
        "transform": {
            "operation": "register-webhook",
            "replace_entity": false,
            "side_effects": true,
            "system": "{{@ system @}}",
            "type": "rest"
        },
        "type": "pipe"
    },
    {
        "_id": "{{@ system @}}-customer-collect",
        "namespaced_identifiers": false,
        "source": {
            "datasets": [
                "{{@ system @}}-customer-all",
                "{{@ system @}}-customer-event-processed"
            ],
            "type": "merge_datasets"
        },
        "type": "pipe"
    },
    {
        "_id": "{{@ system @}}-customer-all",
        "namespaced_identifiers": false,
        "source": {
            "id_expression": "{{ id }}",
            "operation": "list-customer",
            "payload_property": "values",
            "system": "{{@ system @}}",
            "type": "rest"
        },
        "type": "pipe"
    }
]