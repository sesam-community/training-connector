[
    {
        "_id": "{{@ system @}}-customer-event",
        "compaction": {
            "keep_versions": 0,
            "time_threshold_hours": 168
        },
        "namespaced_identifiers": false,
        "source": {
            "trace": true,
            "type": "http_endpoint"
        },
        "transform": [
            {
                "rules": {
                    "default": [
                        [
                            "copy",
                            "*"
                        ],
                        [
                            "add",
                            "_id",
                            [
                                "string",
                                "_S.id"
                            ]
                        ]
                    ]
                },
                "type": "dtl"
            }
        ],
        "type": "pipe"
    },
    {
        "_id": "{{@ system @}}-customer-event-processed",
        "namespaced_identifiers": false,
        "source": {
            "dataset": "{{@ system @}}-customer-event",
            "type": "dataset"
        },
        "transform": {
            "rules": {
                "default": [
                    [
                        "if",
                        [
                            "eq",
                            "_S.event",
                            "customer.delete"
                        ],
                        [
                            "add",
                            "_deleted",
                            true
                        ]
                    ],
                    [
                        "merge",
                        "_S.value"
                    ]
                ]
            },
            "type": "dtl"
        },
        "type": "pipe"
    },
    {
        "_id": "{{@ system @}}-customer-collect",
        "namespaced_identifiers": false,
        "source": {
            "datasets": [
                "{{@ system @}}-customer-all",
                "{{@ system @}}-customer-event-processed"
            ],
            "type": "merge_datasets"
        },
        "type": "pipe"
    },
    {
        "_id": "{{@ system @}}-customer-all",
        "namespaced_identifiers": false,
        "source": {
            "id_expression": "{{ id }}",
            "operation": "list",
            "payload_property": "values",
            "properties": {
                "datatype": "customer"
            },
            "system": "{{@ system @}}",
            "type": "rest"
        },
        "type": "pipe"
    }
]